<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="strokeWidth" format="float"/>
    <attr name="color" format="color"/>
    <attr name="paintStyle" format="integer">
        <enum name="fill" value="0" />
        <enum name="stroke" value="1"/>
        <enum name="fillAndStroke" value="2"/>
    </attr>

    <declare-styleable name="SimpleDrawView1">
        <attr name="paintStyle"/>
        <attr name="strokeWidth"/>
        <attr name="color"/>
        <attr name="radius" format="float"/>
    </declare-styleable>

    <declare-styleable name="SimpleDrawView2">
        <attr name="paintStyle"/>
        <attr name="strokeWidth"/>
        <attr name="color"/>
        <attr name="mWidth" format="float"/>
        <attr name="mHeight" format="float"/>
        <attr name="round" format="boolean"/>
        <attr name="rx" format="float"/>
        <attr name="ry" format="float"/>
    </declare-styleable>

    <declare-styleable name="SimpleDrawView8">
        <attr name="resource" format="reference"/>
    </declare-styleable>
</resources>